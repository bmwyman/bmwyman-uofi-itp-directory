@page "/profile/headshot"

<PageTitle>Profile Headshot | UIUC</PageTitle>
@if (Employee != null)
{
    <il-section>
        <h1>@Employee.ProfileName Headshot</h1>
        <p>Add a professional headshot to this profile by uploading a photo below. Please be sure the image is already cropped, or the image will auto-resize to a similar size. Make sure you save any changes.</p>

        <Instructions ChildContent="@Instructions"></Instructions>
        <ImageUploader @ref="@ImageUploader" Size="@Size" Height="@Height" Width="@Width" FileUrl="@Employee.PhotoUrl" ItemId="@Employee.NetIdTruncated" Delete="DeleteImage" Save="SaveImage"></ImageUploader>
        <button class="il-button" @onclick="Send">Save</button>
        <ViewProfile NetId="@Employee.NetId"></ViewProfile>
        <div id="update-alert-parent"><span class="hide" id="update-alert" role="alert"></span></div>

    </il-section>
}
