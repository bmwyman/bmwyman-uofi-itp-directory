@page "/office/users/{officeid:int?}"

<PageTitle>Office General | UIUC</PageTitle>

<il-section>
    <h1>@OfficeTitle</h1>
    <p>These people will be able to edit office information, create other office administrators for their unit, and edit people that are in their office. Public entries are displayed as administrators to the outside world, while private entries have the same permissions but are not displayed. For example, if you have a primary person responsible for tasks and a backup person, you would make the primary person public and the backup person private.</p>
</il-section>
@if (!OfficeId.HasValue)
{
    <MultiChoice @ref="_multiChoice" Type="MultiChoiceTypeEnum.Office" AreaOfficeThinObjects="_officeThinObjects" OnClickCallback="AssignId"></MultiChoice>
}
else
{
    <il-section class="iled-username-parent">
        @foreach (var entity in SecurityEntries ?? new List<SecurityEntry>())
        {
            <UsernameItem SecurityEntry="@entity" OnClickCallback="e => RemoveEntry(entity.Id)"></UsernameItem>
        }
    </il-section>
    <div>
        <div class="iled-input-box-parent">
            <div class="iled-input-box">
                <label for="ed-netid" class="iled-label-required">Add a New Office Administrator</label>
                <input id="ed-netid" required type="text" @bind="NetId">
            </div>
            <div class="iled-instructions">
                Enter a Net ID of the office administrator. The <em>@@illinois.edu</em> suffix is optional
            </div>
        </div>
    </div>
    <button class="il-button" @onclick="LookupId">Look up NetID</button>
    <button class="il-button" @onclick="Send">Save</button>
    <MainPageButton></MainPageButton>
    <div id="update-alert-parent"><span class="hide" id="update-alert" role="alert"></span></div>

}