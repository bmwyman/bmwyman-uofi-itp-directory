@page "/unit/users/{unitid:int?}"

<PageTitle>Unit Admin | UIUC</PageTitle>

<il-section>
    <h1>@UnitTitle Administrators</h1>
    <p>These people will be able to create new offices, create other unit administrators for their unit, and office administrators.</p><p> Public entries are displayed as administrators to the outside world, while private entries have the same permissions but are not displayed. For example, if you have a primary person responsible for tasks and a backup person, you would make the primary person public and the backup person private.</p>
    <p>@Error</p>
</il-section>
@if (UnitId.HasValue)
{
    <il-section class="iled-username-parent">
        @foreach (var entity in SecurityEntries ?? new List<SecurityEntry>())
        {
            <UsernameItem Disabled="false" SecurityEntry="@entity" OnClickCallback="e => RemoveEntry(entity.Id)"></UsernameItem>
        }
    </il-section>
    <div>
        <div class="iled-input-box-parent">
            <div class="iled-input-box">
                <label for="ed-netid" class="iled-label-required">Add a New Unit Administrator</label>
                <input id="ed-netid" required type="text" @bind="NetId">
            </div>
            <div class="iled-instructions">
                Enter a Net ID of the unit administrator. The <em>@@illinois.edu</em> suffix is optional
            </div>
        </div>
    </div>
    <div class="iled-buttons-left">
        <button class="il-button" @onclick="Send" @onblur="RemoveMessage">Save</button>
        <button class="il-button" @onclick="LookupId" @onblur="RemoveMessage">Check NetID</button>
        <ClearCacheButton></ClearCacheButton>
    </div>
    <ToastPopup></ToastPopup>
}
else
{
    <MultiChoice @ref="_multiChoice" Type="MultiChoiceTypeEnum.Area" AreaOfficeThinObjects="_areaThinObjects" OnClickCallback="AssignId"></MultiChoice>
}